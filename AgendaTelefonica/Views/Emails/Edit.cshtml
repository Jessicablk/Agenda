@model AgendaTelefonica.Models.Email

@{
    ViewData["Title"] = "Atualização do E-mail";
}


<h4 class="text-light">Atualização do E-mail @Model.Nome</h4>
<hr />
<div class="row">
    <div class="col-md-4 text-light">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnderecoEmail" class="control-label"></label>
                <input asp-for="EnderecoEmail" class="form-control" id="email" />
                <span asp-validation-for="EnderecoEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdContato" class="control-label"></label>
                <select asp-for="IdContato" class="form-control" asp-items="ViewBag.IdContato"></select>
                <span asp-validation-for="IdContato" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>
<div class="form-group">
    <a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@Model.Id">Atualizar</a> |
    <a class="btn btn-outline-primary" asp-action="Index">Voltar</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
