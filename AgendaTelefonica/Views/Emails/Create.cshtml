@model AgendaTelefonica.Models.Email

@{
    ViewData["Title"] = "Novo E-mail";
}

<h4 class="text-light">Novo E-mail</h4>
<hr />
<div class="row">
    <div class="col-md-4 text-light">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnderecoEmail" class="control-label"></label>
                <input asp-for="EnderecoEmail" class="form-control" id="email" />
                <span asp-validation-for="EnderecoEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdContato" class="control-label"></label>
                <select asp-for="IdContato" class="form-control" asp-items="ViewBag.IdContato"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-outline-success" /> &emsp;
                <a asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
