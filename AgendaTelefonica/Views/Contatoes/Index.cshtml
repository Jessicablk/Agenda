@model IEnumerable<AgendaTelefonica.Models.Contato>
@inject ClassAuxiliar auxiliar

@{
    ViewData["Title"] = "Contatos cadastrados";
    ViewBag.teste = 2;
    var auxiId = auxiliar;
    var idc = 123;

}
<link href="~/css/contato.css" rel="stylesheet" />
<div class="alert alert-dark row align-content-center">
    <div class="col-10 align-content-start">
        <h6>@Model.Count() contatos cadastrados</h6>
    </div>
    <div class="col-2 align-content-end">
        <a asp-action="Create" class="btn btn-outline-dark">Novo contato <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-check-fill" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M15.854 5.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 0 1 .708-.708L12.5 7.793l2.646-2.647a.5.5 0 0 1 .708 0z" />
                <path d="M1 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
            </svg>
        </a>
    </div>
</div>

<div>

    @if (TempData["ContatoNovo"] != null)
    {
        <p class="alert alert-success">@TempData["ContatoNovo"].ToString()</p>
    }
    @if (TempData["ContatoAtualizado"] != null)
    {
        <p class="alert alert-primary">@TempData["ContatoAtualizado"].ToString()</p>
    }
    @if (TempData["ContatoExcluido"] != null)
    {
        <p class="alert alert-danger">@TempData["ContatoExcluido"].ToString()</p>
    }
</div>

<hr />

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-4 pt-5">
            <div class="card">
                <img src="@Url.Content(item.Foto)" class="card-img-top" height="350" />

                <div class="card-body">
                    <div class="card-title">
                        <div class="row">
                            <div class="col-9 align-content-start">
                                <h5>@item.Nome @item.Sobrenome - @item.Idade anos </h5>
                            </div>

                            <div class="col-3 badge badge-pill badge-secondary">
                                <text class="align-middle">@item.TipoTelefone</text>
                            </div>
                        </div>
                    </div>

                    <div class="card-text">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-telephone" viewBox="0 0 16 16">
                            <path d="M3.654 1.328a.678.678 0 0 0-1.015-.063L1.605 2.3c-.483.484-.661 1.169-.45 1.77a17.568 17.568 0 0 0 4.168 6.608 17.569 17.569 0 0 0 6.608 4.168c.601.211 1.286.033 1.77-.45l1.034-1.034a.678.678 0 0 0-.063-1.015l-2.307-1.794a.678.678 0 0 0-.58-.122l-2.19.547a1.745 1.745 0 0 1-1.657-.459L5.482 8.062a1.745 1.745 0 0 1-.46-1.657l.548-2.19a.678.678 0 0 0-.122-.58L3.654 1.328zM1.884.511a1.745 1.745 0 0 1 2.612.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.678.678 0 0 0 .178.643l2.457 2.457a.678.678 0 0 0 .644.178l2.189-.547a1.745 1.745 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.634 18.634 0 0 1-7.01-4.42 18.634 18.634 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877L1.885.511z" />
                        </svg>
                        <h6 class="badge badge-info">@item.Telefone</h6>
                        <br>
                        <p class="badge badge-warning">@item.Emails</p>
                    </div>
                    <div>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Atualizar</a>
                        <a class="btn btn-sm btn-outline-danger" onclick="ConfirmarExclusao(@item.Id, '@item.Nome')">Excluir <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                                <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div class="modal" id="modalId" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmação de exclusão</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Deseja continuar com a exclusão do contato <text class="nomeContato"></text> ?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-success btnFechar" data-bs-dismiss="modal">Não</button>
                <button type="button" class="btn btn-outline-danger btnExcluir" id="btnExcluir" data-bs-dismiss="modal" onclick="confirmarExc()">Sim</button>
                @*<a class="btn btn-outline-danger btnExcluir" id="btnExcluir" data-bs-dismiss="modal" asp-controller="Contatoes" asp-action="TesteExclusao" asp-route-id="@auxiliar.id" >Sim</a>*@
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script>
        function ConfirmarExclusao(id, nomeContato) {
            
            idc = id;
           
            $(".nomeContato").text(nomeContato);
            $(".modal").modal();
            

            $(".btnFechar").on('click', function () {
                id = null;
                nomeContato = null;
                $(".modal").modal('hide');
            })
        }
        //function confirmarExc() {
        //    var url = 'http://localhost:44317/Contatoes/TesteExclusao/' + idc;
        //    window.location.href = url;

        //}
        function confirmarExc() {
            document.getElementById('modalId').style.display = 'none';
            const url = 'https://localhost:44317/Contatoes/Delete/' + idc;
            var request = new Request(url, {
                method: 'DELETE',
                headers: new Headers()

            });
            fetch(url, request).then(response => Response.redirect('https://localhost:44317/Contatoes'));
            document.location.reload(true);
            return;
            
        }
        //function getIndex() {
        //    document.getElementById('modalId').style.display = 'none';
        //    const url = 'https://localhost:44317/Contatoes';
        //    var request = {
        //        method:'GET'
        //    }
        //    fetch(url, request);
        //}
    </script>
}